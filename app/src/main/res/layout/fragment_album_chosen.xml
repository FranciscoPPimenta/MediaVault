<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Menu de Navegação -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

    <!-- Conteúdo Principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="116dp"
            android:layout_height="123dp"
            android:background="@drawable/fundo_cinzento"
            android:fontFamily="@font/inter_regular"
            android:text="Nome"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="255dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="April"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="212dp" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="null"
            app:srcCompat="@drawable/ic_add"
            tools:layout_editor_absoluteX="747dp"
            tools:layout_editor_absoluteY="20dp" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="null"
            app:srcCompat="@drawable/ic_notifications"
            tools:layout_editor_absoluteX="773dp"
            tools:layout_editor_absoluteY="18dp" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="null"
            app:srcCompat="@drawable/ic_profile"
            tools:layout_editor_absoluteX="801dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="Playlist Name"
            android:textColor="#1E3A8A"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="314dp"
            tools:layout_editor_absoluteY="100dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_menu"
            tools:layout_editor_absoluteX="331dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="null"
            app:srcCompat="@drawable/ic_menu"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="148dp"
            android:layout_height="38dp"
            android:backgroundTint="#1D3A8A"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Add +"
            android:textColor="#FFF"
            tools:layout_editor_absoluteX="352dp"
            tools:layout_editor_absoluteY="148dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
