<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Menu de Navegação -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

    <!-- Conteúdo Principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="301dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="text"
            android:text="Insert a users’ name here..."
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="160dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserting Username:"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="121dp" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="99dp"
            android:layout_height="51dp"
            android:backgroundTint="#1D3A8A"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Share"
            android:textColor="#FFF"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="285dp"
            tools:layout_editor_absoluteY="247dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Share Item"
            android:textColor="#000000"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="346dp"
            tools:layout_editor_absoluteY="15dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:background="null"
            app:srcCompat="@drawable/back"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="15dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/separator"
            tools:layout_editor_absoluteX="417dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or share through code:"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="508dp"
            tools:layout_editor_absoluteY="121dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="301dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="text"
            android:text="T2mpl4t3C0de123"
            tools:layout_editor_absoluteX="508dp"
            tools:layout_editor_absoluteY="160dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
